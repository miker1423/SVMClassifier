<Window x:Class="ClassificationSVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassificationSVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Error: </TextBlock>
                <TextBlock Margin="10,0,0,0" x:Name="Error" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Test result:</TextBlock>
                <TextBlock Margin="10,0,0,0" x:Name="Result" />
            </StackPanel>
            <Button Margin="0,10,0,10" Click="OpenDirectory">Open directory</Button>
            <Button Margin="0,10,0,10" Click="Learn_Clicked">Train</Button>
            <Button Margin="0,10,0,10" Click="Decide">Test</Button>
            <Image Stretch="None" x:Name="ProccesdImage" />
        </StackPanel>
    </Grid>
</Window>
